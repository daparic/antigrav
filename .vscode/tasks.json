{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure",
            "type": "shell",
            "command": "wsl",
            "args": [
                "-d",
                "UBUNTU24.04",
                "cmake",
                "-S",
                ".",
                "-B",
                "build",
                "-G",
                "Unix Makefiles",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_C_COMPILER=/usr/bin/gcc-13",
                "-DCMAKE_CXX_COMPILER=/usr/bin/g++-13"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake: Build Bitboard",
            "type": "shell",
            "command": "wsl",
            "args": [
                "-d",
                "UBUNTU24.04",
                "cmake",
                "--build",
                "build",
                "--target",
                "bitboard"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "CMake: Configure",
            "problemMatcher": "$gcc"
        }
    ]
}