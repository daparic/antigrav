    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Build Bitboard",
            "type": "shell",
            "windows": {
                "command": "wsl",
                "args": [
                    "-d",
                    "UBUNTU24.04",
                    "cmake",
                    "--build",
                    "build",
                    "--target",
                    "bitboard",
                    "--",
                    "-j"
                ]
            },
            "linux": {
                "command": "cmake",
                "args": [
                    "--build",
                    "build",
                    "--target",
                    "bitboard",
                    "--",
                    "-j"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "CMake: Configure",
            "problemMatcher": "$gcc",
            "detail": "Builds the bitboard executable"
        },
