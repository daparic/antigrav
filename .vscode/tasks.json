{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build test_fen",
            "type": "shell",
            "command": "cmake --build build --target test_fen",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build perft",
            "type": "shell",
            "command": "cmake --build build --target perft",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "configure debug",
            "type": "shell",
            "command": "cmake -DCMAKE_BUILD_TYPE=Debug -S . -B build",
            "group": "build"
        },
        {
            "label": "build mate2",
            "type": "shell",
            "command": "cmake --build build --target mate2",
            "group": "build",
            "dependsOn": "configure debug",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}